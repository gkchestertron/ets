<div class="page-header">
    <h1><%= event.get('name') %></h1>
</div>
<div class="row">
    <div class="col-lg-6">
        <div class="panel panel-default event-description">
            <div class="panel-heading">
                <h1 class="panel-title">Description</h1>
            </div>
            <div class="panel-body">
                <%= event.get('description') %>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="panel panel-default">
        <div id="map-canvas"/>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h1 class="panel-title">Races</h1>
            </div>
            <div class="panel-body">
                <% event.get('races').each(function (race) { %>
                    <a href="races/<%= race.id %>"><h3><%= race.get('division') %></h3></a>
                <% }); %>
            </div>
        </div>
    </div>
</div>
